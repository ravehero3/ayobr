modules = ["nodejs-20", "web"]
run = "node index.js"

[nix]
channel = "stable-25_05"
packages = ["unzip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Install Dependencies"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Dev Server"

[[workflows.workflow]]
name = "Install Dependencies"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install electron react react-dom @babel/core @babel/preset-env @babel/preset-react @babel/plugin-proposal-class-properties @babel/plugin-syntax-dynamic-import babel-loader webpack webpack-cli webpack-dev-server html-webpack-plugin style-loader css-loader postcss-loader tailwindcss autoprefixer file-loader framer-motion wavesurfer.js zustand uuid @ffmpeg/ffmpeg @ffmpeg/util"

[[workflows.workflow]]
name = "Dev Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "webpack serve --config webpack.simple.config.js --mode=development"
waitForPort = 5000

[[workflows.workflow]]
name = "Start Dev Server"
author = 44399019
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx webpack serve --config webpack.simple.config.js --host 0.0.0.0 --port 5000"

[[workflows.workflow]]
name = "Start Dev Server Updated"
author = 44399019
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"webpack serve\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx webpack serve --config webpack.simple.config.js --host 0.0.0.0 --port 5000"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
run = ["sh", "-c", "node index.js"]

[agent]
expertMode = true
