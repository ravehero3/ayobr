modules = ["nodejs-20", "web"]
run = "node index.js"

[nix]
channel = "stable-25_05"
packages = ["unzip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TypeBeatz Dev Server"

[[workflows.workflow]]
name = "Start Dev Server"
author = 44399019
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx webpack serve --config webpack.simple.config.js --host 0.0.0.0 --port 5000"

[[workflows.workflow]]
name = "Start Dev Server Updated"
author = 44399019
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"webpack serve\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 2"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx webpack serve --config webpack.simple.config.js --host 0.0.0.0 --port 5000"

[[workflows.workflow]]
name = "Fix and Start Dev Server"
author = 46378110
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx webpack serve --config webpack.simple.config.js --host 0.0.0.0 --port 5000"

[[workflows.workflow]]
name = "TypeBeatz Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx webpack serve --config webpack.config.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 42591
externalPort = 3000

[deployment]
run = ["sh", "-c", "node index.js"]

[agent]
expertMode = true
